<h2>Sign up</h2>

<div id="regFields">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="inputElement">
        <div class="label"><%= f.label :email %></div>
        <div class="inputfield"><%= f.email_field :email %></div>
    </div>

    <div class="inputElement">
        <div class="label"><%= f.label :first_name %></div>
        <div class="inputfield"><%= f.text_field :first_name %></div>
    </div>

    <div class="inputElement">
        <div class="label"><%= f.label :last_name %></div>
        <div class="inputfield"><%= f.text_field :last_name %></div>
    </div>

    <div class="inputElement">
        <div class="label"><%= f.label :password %></div>
        <div class="inputfield"><%= f.password_field :password %></div>
    </div>

    <div class="inputElement">
        <div class="label"><%= f.label :password_confirmation %></div>
        <div class="inputfield"><%= f.password_field :password_confirmation %></div>
    </div>

    <div id="submit_sign_up"><%= f.submit "Sign up" %></div>
  <% end %>
</div>

<div id="wordOr"></div>

<div id="other_links">
  <%= render "links" %>
</div>