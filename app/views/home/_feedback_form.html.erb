<%= form_for(@feedback, :url => feedback_send_path, :html => {:class => "writeUs"}) do |f| %>
    <% if @feedback.errors.any? %>
      <div class="error" id="error_explanation">
        <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

        <ul>
        <% @feedback.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <%= f.text_field :name, :placeholder => "Your name" %>
    <%= f.text_field :email, :placeholder => "Your email" %>
    <%= f.text_area :message, :rows => 7, :placeholder => "Message" %>
    
    <%= f.submit "Send", :id => "submitBtn", :confirm => "Send this feedback to administrator?" %>    
<% end %>

<div class="clearall"></div>
